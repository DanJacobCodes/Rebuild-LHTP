<h1><%= @section.name %></h1>

<% if @section.lessons.any? %>
<h4>Sections<% section.name %></h4>
  <ul>
    <% @section.lessons.each do |section| %>
    <li>
      <%= link_to section.name %>
      <%= link_to "Edit Section", edit_section_lesson_path (@section, lesson) %>
      <%= link_to "Delete" section_path(@section)
                                        :data =>{:confirm => "Are you sure?",
                                          :method => "delete"} %>

    </li>
    <% end %>
  </ul>
  <% else %>
  <p>
    No Sections yet
  </p>
  <% end %>

  <p><%= link_to "Add a section", new_section_lesson_path(@section) %></p>
<p><%= link_to "Delete Section", section_path(@section),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to Sections", sections_path %></p>
