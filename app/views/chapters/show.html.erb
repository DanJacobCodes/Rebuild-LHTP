<h2><%= @chapter.name %></h2>

<% if @chapter.sections.any? %>
<h4>Sections in <% @chapter.name %></h4>
  <ul>
    <% @chapter.sections.each do |section| %>
    <li>
      <%= section.name %> |
      <%= link_to "Edit Section", edit_chapter_section_path(@chapter, section) %> |
      <%= link_to "Delete", chapter_section_path(@chapter, section),
                                        :data => {:confirm => "Are you sure?",
                                          :method => "delete"} %>

    </li>
    <% end %>
  </ul>
  <% else %>
  <p>
    No Chapters yet
  </p>
  <% end %>

  <p><%= link_to "Add a section", new_chapter_section_path(@chapter) %></p>
<p><%= link_to "Delete Chapter", chapter_path(@chapter),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to Chapters", chapters_path %></p>
